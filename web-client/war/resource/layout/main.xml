<?xml version="1.0" encoding="UTF-8" ?>
<panel id="main" layout="absolute" fgcolor="rgba(100, 20, 10, 50)" visible="true">

    <panel width="600px" height="60px" voffset="-20px" id="inner" layout="absolute" bgcolor="#30303080" valign="bottom"
           halign="center" visible="true" border="true" borderWidth="2" borderColor="#D0D0D0FF" radius="5">

        <button width="120px" height="30px" text="Continue" onClick="ContinueGame" voffset="20px" hoffset="-200px"
                valign="top" halign="center"/>
        <button width="120px" height="30px" text="Options" onClick="OptionsMenu" voffset="20px" hoffset="-70px"
                valign="top" halign="center"/>
        <button width="120px" height="30px" text="Support" onClick="SupportMenu" voffset="20px" hoffset="70px"
                valign="top" halign="center"/>
        <button width="120px" height="30px" text="Exit Game" onClick="ExitGame" voffset="20px" hoffset="200px"
                valign="top" halign="center"/>

    </panel>

</panel>